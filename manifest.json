{
  "manifest_version": 3,
  "name": "Hide The Prices",
  "version": "1.0.0",
  "description": "Hide prices on e-commerce websites.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.in/*",
    "*://*.flipkart.com/*",
    "*://*.myntra.com/*",
    "*://*.ajio.com/*",
    "*://*.nykaa.com/*",
    "*://*.meesho.com/*",
    "*://*.ebay.com/*",
    "*://*.walmart.com/*",
    "*://*.target.com/*",
    "*://*.bestbuy.com/*",
    "*://*.costco.com/*",
    "*://*.homedepot.com/*",
    "*://*.alibaba.com/*",
    "*://*.aliexpress.com/*",
    "*://*.etsy.com/*",
    "*://*.overstock.com/*",
    "*://*.wayfair.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.in/*",
        "*://*.flipkart.com/*",
        "*://*.myntra.com/*",
        "*://*.ajio.com/*",
        "*://*.nykaa.com/*",
        "*://*.meesho.com/*",
        "*://*.ebay.com/*",
        "*://*.walmart.com/*",
        "*://*.target.com/*",
        "*://*.bestbuy.com/*",
        "*://*.costco.com/*",
        "*://*.homedepot.com/*",
        "*://*.alibaba.com/*",
        "*://*.aliexpress.com/*",
        "*://*.etsy.com/*",
        "*://*.overstock.com/*",
        "*://*.wayfair.com/*"
      ],
      "js": [
        "js/site-configs.js",
        "js/content.js"
      ],
      "css": [
        "css/content.css"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_title": "Hide The Prices",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}